<!-- activity_booking.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BookingActivity">

    <TextView
        android:id="@+id/bookingTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Confirmation"
        android:textSize="24sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookingTitleTextView"
        android:layout_marginTop="16dp"
        android:text="Selected Date: "
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/seatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTextView"
        android:layout_marginTop="16dp"
        android:text="Selected Seat: "
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seatTextView"
        android:layout_marginTop="16dp"
        android:text="Selected Time: "
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/returnToMapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Return to map"
        android:textAlignment="center"/>
    <FrameLayout
        android:id="@+id/returnToMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
